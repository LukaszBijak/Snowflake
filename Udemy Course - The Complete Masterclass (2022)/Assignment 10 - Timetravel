CREATE DATABASE TIMETRAVEL_EXERCISE;
CREATE SCHEMA TIMETRAVEL_EXERCISE.COMPANY_X;
CREATE TABLE CUSTOMER AS
SELECT * FROM SNOWFLAKE_SAMPLE_DATA.TPCH_SF1.CUSTOMER
LIMIT 500;
select * from CUSTOMER;
DROP SCHEMA TIMETRAVEL_EXERCISE.COMPANY_X;
undrop SCHEMA TIMETRAVEL_EXERCISE.COMPANY_X


SELECT 
    TABLE_NAME,
    table_catalog,
    ACTIVE_BYTES / (1024*1024) AS storage_used_mb,
    time_travel_bytes / (1024*1024) AS time_travel_storage_used_mB
FROM SNOWFLAKE.ACCOUNT_USAGE.TABLE_STORAGE_METRICS
ORDER BY STORAGE_USED_mB desc;
